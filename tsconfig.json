{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "rootDirs": ["./src", "./tests"],
    "strict": true,
    "strictPropertyInitialization": false,
    "baseUrl": "./src",
     "paths": {
      "@/*": ["*"]
    },
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src", "tests"],
  "exclude": []
}
